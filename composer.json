{
    "name": "luxutils/livewire-calendar",
    "description": "Laravel Livewire calendar component",
    "keywords": [
        "livewire-calendar"
    ],
    "homepage": "https://github.com/luxutils/livewire-calendar",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Andrés Santibáñez",
            "email": "santibanez.andres@gmail.com",
            "role": "Developer"
        },
        {
            "name": "Saulius Kazokas",
            "email": "saulens22@gmail.com"
        }
    ],
    "require": {
        "illuminate/support": "^9.0|^10.0",
        "livewire/livewire": "^2.0"
    },
    "require-dev": {
        "orchestra/testbench": "^7.7",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Luxutils\\LivewireCalendar\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Luxutils\\LivewireCalendar\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Luxutils\\LivewireCalendar\\LivewireCalendarServiceProvider"
            ],
            "aliases": {
                "LivewireCalendar": "Luxutils\\LivewireCalendar\\LivewireCalendarFacade"
            }
        }
    }
}
